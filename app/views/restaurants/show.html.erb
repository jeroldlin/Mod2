<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @restaurant.description %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= @restaurant.phone_number %>
</p>

<p>
  <strong>Category(s):</strong>
  <%- @categories.each do |c| %>
  <%=   c.name %>
  <% end %>
</p>

<p>
  <strong>Owner(s):</strong>
  <%- @users.each do |u| %>
  <%=   u.name %>
  <% end %>
</p>
<% if user_signed_in? %>
  <p>
    <%=render "starrings/form" %>
  </p>

  <p>
    <%=render "reservations/reservations" %>
  </p>
<% end %>
<hr />

<p>
  <%= image_tag(@map_url_string, alt: "Google Map") %>
</p>

