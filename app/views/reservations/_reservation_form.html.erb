<%= form_for(@newReservation) do |f| %>
 <%= render "shared/error_messages", :target => @newReservation %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :requested_date_time %><br>
    <%= f.text_field :requested_date_time %>
  </div>
  <div class="field">
    <%= f.label :message %><br>
    <%= f.text_area :message %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
