<h2>Current Reservation</h2>
<table id="indexList">
	<thead>
		<tr>
			<th>Email</th>
			<th>Reservation time</th>
			<th>Comments</th>
			<th>Restaurant</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @reservations.each do |reservation| %>
			<% if current_user.id == reservation.user_id %>
				<tr>
				    <td><%= reservation.email %></td>
				    <td><%= reservation.requested_date_time %></td>
				    <td><%= reservation.message %></td>
				    <td><%= reservation.restaurant_association %></td>
				    <td class="indexListButton"><%= link_to 'Cancel Reservation', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>